<body>

  <h1>User info</h1>
  <%= attachment_image_tag @current_user, :profile_image, :fill, 63, 63, fallback: "no_image.jpg", size: '63x63' %>
  <table>
   <tr><th>name</th><td><%= @current_user.name %></td></tr>
   <tr><th>introduction</th><td><%= @current_user.introduction %></td></tr>
  </table>

  <h1>New book</h1>
  <%= form_with model: @book, local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>



  <h1>Books</h1>

  <table>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
       <tr>
         <td><%= attachment_image_tag user, :profile_image, :fill, 63, 63, fallback: "no_image.jpg", size: '40x40' %></td>
         <td><%= user.name %></td>
         <td><%= link_to 'Show', user_path(user) %></td>
       </tr>
      <% end %>
    </tbody>
  </table>
</body>