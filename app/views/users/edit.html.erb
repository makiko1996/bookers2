
<h1>User info</h1>
<div>
 <%= form_with model:@user, url:user_path(@user), local:true do |f| %>
   <div>
    <p>Name</p>
     <%= f.text_field :name, autofocus: true, id:"inputName" %>
   </div>
   <div>
    <p>Image</p>
     <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
   </div>
   <div>
    <p>Introduction</p>
     <%= f.text_area :introduction %>
     <%= f.submit 'Update User' %>
   </div>
 
 <% end %>
</div>


