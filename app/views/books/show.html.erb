<body>
  
  <h1>New book</h1>
  <%= form_with model: @book, local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :opinion %>
    <%= f.submit 'Create Book' %>
  <% end %>
  


  <h1>Book detail</h1>
  
  <table>
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    
    <tbody>
       <tr>
         <td>
           <%= attachment_image_tag @user, :user_image, :fill, 63, 63, fallback: "no_image.jpg", size: '63x63' %></br>
           <%= link_to @user.name, user_path(@user) %>
         </td>
         <td><%= @book.title %></td>
         <td><%= @book.opinion %></td>
       </tr>
    </tbody>
  </table>
</body>