<body>
  
  <h1>New book</h1>
  <%= form_with model: @book, local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :opinion %>
    <%= f.submit 'Create Book' %>
  <% end %>
  


  <h1>Books</h1>
  
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
        <th></th>
      </tr>
    </thead>
    
    <tbody>
      <% @books.each do |book| %>
       <tr>
         <td><%= book.title %></td>
         <td><%= book.opinion %></td>
       </tr>
      <% end %>
    </tbody>
  </table>
</body>